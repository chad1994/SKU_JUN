
public class Timethread extends Thread implements Runnable {
	Model model;
	Board board;
	MainFrame frame;
	private int cnt = 15;
	private boolean state = true;

	@Override
	public void run() {
		super.run();
		final int savecounter = model.Counter;
		while (state) {
			try {
				board.repaint();
				if(model.Counter>savecounter){
					cnt--;
					board.repaint();
					sleep(1000);
					if(savecounter+2==model.Counter)
						state = false;
					if (cnt == 0) {
						++model.Counter;
						board.repaint();
						state = false;
					}
				}
			} catch (InterruptedException e) {
				// TODO Auto-generated catch block
				e.printStackTrace();
			}
		}
	}

	public int getCnt() {
		return cnt;
	}

	public void setCnt(int cnt) {
		this.cnt = cnt;
	}

	Timethread(Model model, Board board,MainFrame frame) {
		this.model = model;
		this.board = board;
		this.frame = frame;
	}

}
